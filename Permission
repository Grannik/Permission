#!/bin/bash
E='echo -e';e='echo -en';trap "R;exit" 2
    ESC=$( $e "\e")
   TPUT(){ $e "\e[${1};${2}H" ;}
  CLEAR(){ $e "\ec";}
# 25 возможно это 
  CIVIS(){ $e "\e[?25l";}
# это цвет текста списка перед курсором при значении 0 в переменной  UNMARK(){ $e "\e[0m";}
MARK(){ $e "\e[41m";}
# 0 это цвет заднего фона списка
 UNMARK(){ $e "\e[0m";}
# ~~~~~~~~ Эти строки задают цвет фона ~~~~~~~~
 R(){ CLEAR ;stty sane;CLEAR;};
#R(){ CLEAR ;stty sane;$e "\ec\e[37;44m\e[J";};
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
 HEAD(){ for (( a=1; a<=17; a++ ))
  do
   TPUT $a 1
        $E "\xE2\x94\x82                                                            \xE2\x94\x82";
  done
   TPUT 3 2 
        $E "                   Справочник PERMISSION                    ";
   TPUT 15 2 
        $E "  Up \xE2\x86\x91 \xE2\x86\x93 Down Select Enter                       ";
 MARK;TPUT 1 2
        $E "              Программа написана на bash tput               " ;UNMARK;}
   i=0; CLEAR; CIVIS;NULL=/dev/null
# 32 это расстояние сверху и 48 это расстояние слева
   FOOT(){ MARK;TPUT 17 2
# нижнее заглавие
        $E "                   Grannik | 2021.07.03                     ";UNMARK;}
# это управляет кнопками ввер/хвниз
 i=0; CLEAR; CIVIS;NULL=/dev/null
#
 ARROW(){ IFS= read -s -n1 key 2>/dev/null >&2
           if [[ $key = $ESC ]];then 
              read -s -n1 key 2>/dev/null >&2;
              if [[ $key = \[ ]]; then
                 read -s -n1 key 2>/dev/null >&2;
                 if [[ $key = A ]]; then echo up;fi
                 if [[ $key = B ]];then echo dn;fi
              fi
           fi
           if [[ "$key" == "$($e \\x0A)" ]];then echo enter;fi;}
# 4 и далее это отступ сверху и 48 это расстояние слева
 M0(){ TPUT  5 3; $e " Версия chmod                                            ";}
 M1(){ TPUT  6 3; $e " Show script                                             ";}
 M2(){ TPUT  7 3; $e " Владелец/Группа/Все                                     ";}
 M3(){ TPUT  8 3; $e " Буквенное изменение прав к файлу или директории для all ";}
 M4(){ TPUT  9 3; $e " Буквенное изменение прав к файлу или директории для ugo ";}
 M5(){ TPUT 10 3; $e " Числовое значение и суммы chmod                         ";}
 M6(){ TPUT 11 3; $e " Числовое изменение прав к файлу или директории          ";}
 M7(){ TPUT 12 3; $e " Рекурсия                                                ";}
 M8(){ TPUT 13 3; $e " EXIT                                                    ";}
# далее идет переменная LM=16 позволяющая выстраивать список в вертикаль.
 LM=8
   MENU(){ for each in $(seq 0 $LM);do M${each};done;}
    POS(){ if [[ $cur == up ]];then ((i--));fi
           if [[ $cur == dn ]];then ((i++));fi
           if [[ $i -lt 0   ]];then i=$LM;fi
           if [[ $i -gt $LM ]];then i=0;fi;}
REFRESH(){ after=$((i+1)); before=$((i-1))
           if [[ $before -lt 0  ]];then before=$LM;fi
           if [[ $after -gt $LM ]];then after=0;fi
           if [[ $j -lt $i      ]];then UNMARK;M$before;else UNMARK;M$after;fi
           if [[ $after -eq 0 ]] || [ $before -eq $LM ];then
           UNMARK; M$before; M$after;fi;j=$i;UNMARK;M$before;M$after;}
   INIT(){ R;HEAD;FOOT;MENU;}
     SC(){ REFRESH;MARK;$S;$b;cur=`ARROW`;}
# Функция возвращения в меню
     ES(){ MARK;$e " ENTER = main menu ";$b;read;INIT;};INIT
  while [[ "$O" != " " ]]; do case $i in
# Здесь необходимо следить за двумя перепенными 0) и S=M0 Они должны совпадать между собой и переменной списка M0().
        0) S=M0 ;SC;if [[ $cur == enter ]];then R;chmod --version;ES;fi;;
        1) S=M1 ;SC;if [[ $cur == enter ]];then R;echo "chmod --version";ES;fi;;
        2) S=M2;SC;if [[ $cur == enter ]];then R;echo "
 Пользователь | Владелец | Группа | Все остальные
 -------------+----------+--------+-------+------
 Значение     | user     | group  | other | all
 -------------+----------+--------+-------+------
 Буква        | u        | g      | o     | a
 -------------+----------+--------+-------+------

 u   g   o
 rwx --- --- для пользователя
 --- rwx --- для группы
 --- --- rwx для для всех остальных
 ";ES;fi;;
        3) S=M3;SC;if [[ $cur == enter ]];then R;echo "
 --------------------------------------------------------------------------------------------------
                                         *** Для all ***
 ---------------+---------------------------+---------------------------+--------------------------
                | права на чтение           | права на запись           | права на исполнение
 ---------------+---------------------------+---------------------------+--------------------------
 буквенный код  | r                         | w                         | x
 ---------+-----+---------------------------+---------------------------+--------------------------
 удалить  | -   | chmod -r  файл/директория | chmod -w  файл/директория | chmod -x  файл/директория
 ---------+-----+---------------------------+---------------------------+--------------------------
 добавить | +   | chmod +r  файл/директория | chmod +w  файл/директория | chmod +x  файл/директория
 ---------+-----+---------------------------+---------------------------+--------------------------
";ES;fi;;
        4) S=M4 ;SC;if [[ $cur == enter ]];then R;echo "
 -----------------------------------------------------------------------------------------------------------
                                            *** Для ugo ***
 ---------------+------------------------------+------------------------------+-----------------------------
                | права на чтение              | права на запись              | права на исполнение
 ---------------+------------------------------+------------------------------+-----------------------------
 буквенный код  | r                            | w                            | x
 ---------+-----+------------------------------+------------------------------+-----------------------------
 удалить  | -   | chmod ugo-r  файл/директория | chmod ugo-w  файл/директория | chmod ugo-x  файл/директория
 ---------+-----+------------------------------+------------------------------+-----------------------------
 добавить | +   | chmod ugo+r  файл/директория | chmod ugo+w  файл/директория | chmod ugo+x  файл/директория
 ---------+-----+------------------------------+------------------------------+-----------------------------
 
 Удалить все права для всех | chmod ugo= файл/директория
 -----------------------------------------------------------------------------------------------------------
";ES;fi;;
        5) S=M5 ;SC;if [[ $cur == enter ]];then R;echo "
 ---------------------+-----------------+-----------------+---------------------
  7                   | права на чтение | права на запись | права на исполнение 
 ---------------------+-----------------+-----------------+---------------------
  права на чтение     | 4               | 6               | 3                   
 ---------------------+-----------------+-----------------+---------------------
  права на запись     |                 | 2               | 5
 ---------------------+                 +-----------------+---------------------
  права на исполнение |                                   | 1                   
 ---------------------+-----------------+-----------------+---------------------
";ES;fi;;
        6) S=M6 ;SC;if [[ $cur == enter ]];then R;echo "
 ---------+-----+---------------------------+---------------------------+--------------------------
 изменить | nnn | chmod 777 файл/директория | chmod 777 файл/директория | chmod 777 файл/директория
 ---------+-----+---------------------------+---------------------------+--------------------------
";ES;fi;;
        7) S=M7 ;SC;if [[ $cur == enter ]];then R;echo "
 -R --recursive | рекурсивно изменять файлы и каталоги

 Рекурсивно сменить права на все файлы внутри директории
 --------------------------------------------------------+--------------------------------
 Находимся внутри:                                       | Находимся снаружи:
 --------------------------------------------------------+--------------------------------
 chmod 644 *                                             | chmod -R 777 имя_директории
 chmod -x *                                              | chmod -R ugo=rwx имя_директории
";ES;fi;;
        8) S=M8;SC;if [[ $cur == enter ]];then R;exit 0;fi;;
 esac;POS;done
